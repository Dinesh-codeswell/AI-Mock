        {
          "area_3_metrics": {
            "purpose": "Performance statistics",
            "position": "Lower section",
            "display": "Flex grid of metric cards",
            "note": "Customize metrics for Beyond Career"
          }
        }
      ],
      "label": {
        "text": "Main Dashboard Interface",
        "position": "Bottom right of card",
        "font_family": "sans-serif, Inter",
        "font_size": "13px",
        "font_weight": "500",
        "color": "#6B7280 (gray-500)",
        "font_style": "italic",
        "padding": "8px 0 0 0"
      }
    },
    "preview_card_2_interview": {
      "position": "Second preview card in scroll area",
      "container": {
        "width": "100%",
        "background_color": "#FFFFFF",
        "border": "1px solid #E5E7EB",
        "border_radius": "16px",
        "padding": "24px",
        "box_shadow": "0 4px 16px rgba(0, 0, 0, 0.06)",
        "transition": "all 0.3s ease"
      },
      "header": {
        "display": "flex",
        "align_items": "center",
        "justify_content": "space-between",
        "margin_bottom": "20px",
        "title": {
          "text": "Ace your live interview",
          "font_family": "sans-serif, Inter",
          "font_size": "16px",
          "font_weight": "600",
          "color": "#1F2937"
        },
        "back_button": {
          "text": "← Back to Dashboard",
          "background": "#1F2937 (dark gray/black)",
          "color": "#FFFFFF",
          "padding": "8px 16px",
          "border_radius": "6px",
          "font_size": "13px",
          "font_weight": "600",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover_background": "#111827"
        }
      },
      "content_note": "This preview shows an interview preparation interface with work experience stories",
      "image_placeholder_areas": [
        {
          "interview_details_section": {
            "purpose": "Shows role, company, and interview details",
