{
  "page_type": "Onboarding Form with Live Preview Panels",
  "page_title": "Beyond Career - Personalization Setup",
  "brand_customization": {
    "brand_name": "Beyond Career",
    "logo_source": "Use Beyond Career logo from /public folder in project directory",
    "logo_implementation_note": "Replace InterviewBee branding with Beyond Career logo and styling throughout"
  },
  "layout": {
    "type": "Two-column split layout",
    "structure": "60% form area (left) / 40% preview area (right)",
    "background_color": "#FFFFFF (pure white for entire page)",
    "min_height": "100vh",
    "overflow": "hidden"
  },
  "main_container": {
    "display": "flex",
    "flex_direction": "row",
    "width": "100%",
    "min_height": "100vh",
    "padding": "0px",
    "gap": "0px",
    "position": "relative"
  },
  "left_section_form_area": {
    "container": {
      "flex": "1 1 60%",
      "max_width": "60%",
      "background_color": "#FFFFFF",
      "padding": {
        "top": "60px",
        "bottom": "80px",
        "left": "80px",
        "right": "60px"
      },
      "display": "flex",
      "flex_direction": "column",
      "overflow_y": "auto",
      "height": "100vh"
    },
    "logo_section": {
      "position": "Top of form area",
      "margin_bottom": "60px",
      "implementation": {
        "element": "img or brand component",
        "source": "/public/beyond-career-logo.png or /public/logo.svg",
        "alt_text": "Beyond Career Logo",
        "height": "40px",
        "width": "auto",
        "object_fit": "contain"
      },
      "styling_note": "Use your Beyond Career logo instead of InterviewBee bee icon and text"
    },
    "progress_indicator": {
      "position": "Below logo, above form",
      "margin_bottom": "40px",
      "container": {
        "display": "flex",
        "flex_direction": "column",
        "gap": "12px",
        "width": "100%",
        "max_width": "800px"
      },
      "progress_bars": {
        "display": "flex",
        "gap": "8px",
        "width": "100%"
      },
      "bar_1_active": {
        "width": "50%",
        "height": "4px",
        "background_color": "#F59E0B (amber/yellow)",
        "border_radius": "2px",
        "transition": "all 0.3s ease"
      },
      "bar_2_inactive": {
        "width": "50%",
        "height": "4px",
        "background_color": "#E5E7EB (light gray)",
        "border_radius": "2px",
        "transition": "all 0.3s ease"
      },
      "progress_text": {
        "text": "1 of 2",
        "font_family": "sans-serif, Inter, -apple-system, system-ui",
        "font_size": "14px",
        "font_weight": "500 (medium)",
        "color": "#6B7280 (gray-500)",
        "margin_top": "8px"
      }
    },
    "form_header": {
      "margin_top": "48px",
      "margin_bottom": "40px",
      "heading": {
        "text": "Let's personalize your Beyond Career",
        "customization_note": "Replace 'InterviewBee' with 'Beyond Career'",
        "font_family": "sans-serif, Inter, -apple-system, system-ui",
        "font_size": "36px",
        "font_weight": "700 (bold)",
        "color": "#000000 (black)",
        "line_height": "1.2",
        "letter_spacing": "-0.02em"
      }
    },
    "form_fields": {
      "container": {
        "display": "flex",
        "flex_direction": "column",
        "gap": "32px",
        "max_width": "800px",
        "width": "100%"
      },
      "name_fields_row": {
        "display": "grid",
        "grid_template_columns": "1fr 1fr",
        "gap": "24px",
        "margin_bottom": "32px",
        "first_name_field": {
          "container": {
            "display": "flex",
            "flex_direction": "column",
            "width": "100%"
          },
          "label": {
            "text": "First Name",
            "required_indicator": true,
            "font_family": "sans-serif, Inter, -apple-system",
            "font_size": "15px",
            "font_weight": "500 (medium)",
            "color": "#1F2937 (gray-800)",
            "margin_bottom": "8px",
            "display": "flex",
            "align_items": "center",
            "gap": "4px"
          },
          "required_asterisk": {
            "character": "*",
            "color": "#EF4444 (red-500)",
            "font_size": "15px"
          },
          "input": {
            "type": "text",
            "placeholder": "Enter your first name",
            "value": "",
            "width": "100%",
            "height": "48px",
            "padding": "12px 16px",
            "border": "1px solid #D1D5DB (gray-300)",
            "border_radius": "8px",
            "font_family": "sans-serif, Inter, -apple-system",
            "font_size": "15px",
            "font_weight": "400 (regular)",
            "color": "#1F2937 (gray-800)",
            "placeholder_color": "#9CA3AF (gray-400)",
            "background_color": "#FFFFFF",
            "transition": "all 0.2s ease",
            "outline": "none"
          },
          "validation_states": {
            "default": {
              "border_color": "#D1D5DB"
            },
            "focus": {
              "border_color": "#F59E0B (amber)",
              "box_shadow": "0 0 0 3px rgba(245, 158, 11, 0.1)"
            },
            "error": {
              "border_color": "#EF4444 (red)",
              "box_shadow": "0 0 0 3px rgba(239, 68, 68, 0.1)"
            },
            "valid": {
              "border_color": "#10B981 (green)",
              "box_shadow": "0 0 0 3px rgba(16, 185, 129, 0.1)"
            }
          },
          "error_message": {
            "text": "First name is required",
            "display": "block (when error state active)",
            "font_family": "sans-serif, Inter",
            "font_size": "13px",
            "font_weight": "400",
            "color": "#EF4444 (red-500)",
            "margin_top": "6px",
            "line_height": "1.4"
          }
        },
        "last_name_field": {
          "container": {
            "display": "flex",
            "flex_direction": "column",
            "width": "100%"
          },
          "label": {
            "text": "Last Name",
            "required_indicator": true,
            "font_family": "sans-serif, Inter",
            "font_size": "15px",
            "font_weight": "500",
            "color": "#1F2937",
            "margin_bottom": "8px",
            "display": "flex",
            "align_items": "center",
            "gap": "4px"
          },
          "required_asterisk": {
            "character": "*",
            "color": "#EF4444",
            "font_size": "15px"
          },
          "input": {
            "type": "text",
            "placeholder": "Enter your last name",
            "value": "",
            "width": "100%",
            "height": "48px",
            "padding": "12px 16px",
            "border": "1px solid #D1D5DB",
            "border_radius": "8px",
            "font_family": "sans-serif, Inter",
            "font_size": "15px",
            "font_weight": "400",
            "color": "#1F2937",
            "placeholder_color": "#9CA3AF",
            "background_color": "#FFFFFF",
            "transition": "all 0.2s ease"
          },
          "validation_states": {
            "default": {
              "border_color": "#D1D5DB"
            },
            "focus": {
              "border_color": "#F59E0B",
              "box_shadow": "0 0 0 3px rgba(245, 158, 11, 0.1)"
            },
            "error": {
              "border_color": "#EF4444",
              "box_shadow": "0 0 0 3px rgba(239, 68, 68, 0.1)"
            }
          },
          "error_message": {
            "text": "Last name is required",
            "display": "block (when error)",
            "font_size": "13px",
            "color": "#EF4444",
            "margin_top": "6px"
          }
        }
      },
      "role_field": {
        "container": {
          "display": "flex",
          "flex_direction": "column",
          "width": "100%",
          "margin_bottom": "32px"
        },
        "label": {
          "text": "Your current role (or the role you are applying for)",
          "required_indicator": true,
          "font_family": "sans-serif, Inter",
          "font_size": "15px",
          "font_weight": "500",
          "color": "#1F2937",
          "margin_bottom": "8px",
          "display": "flex",
          "align_items": "center",
          "gap": "4px"
        },
        "required_asterisk": {
          "character": "*",
          "color": "#EF4444",
          "font_size": "15px"
        },
        "dropdown_container": {
          "display": "flex",
          "align_items": "center",
          "width": "100%",
          "min_height": "48px",
          "padding": "8px 16px",
          "border": "1px solid #D1D5DB",
          "border_radius": "8px",
          "background_color": "#FFFFFF",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "position": "relative"
        },
        "validation_states": {
          "default": {
            "border_color": "#D1D5DB"
          },
          "focus": {
            "border_color": "#F59E0B",
            "box_shadow": "0 0 0 3px rgba(245, 158, 11, 0.1)"
          },
          "error": {
            "border_color": "#EF4444",
            "box_shadow": "0 0 0 3px rgba(239, 68, 68, 0.1)"
          }
        },
        "placeholder_text": {
          "text": "You can select up to 3 roles at a time.",
          "display": "when no selections",
          "font_family": "sans-serif, Inter",
          "font_size": "15px",
          "color": "#9CA3AF (gray-400)",
          "font_weight": "400"
        },
        "dropdown_icon": {
          "type": "Chevron down (▼)",
          "position": "absolute",
          "right": "16px",
          "top": "50%",
          "transform": "translateY(-50%)",
          "size": "20px",
          "color": "#6B7280 (gray-500)",
          "transition": "transform 0.2s ease",
          "rotate_when_open": "180deg"
        },
        "error_message": {
          "text": "Please select at least one role",
          "display": "block (when error)",
          "font_size": "13px",
          "color": "#EF4444",
          "margin_top": "6px"
        }
      },
      "promo_code_field": {
        "container": {
          "display": "flex",
          "flex_direction": "column",
          "width": "100%"
        },
        "label": {
          "text": "Got a referral or promo code? (optional)",
          "font_family": "sans-serif, Inter",
          "font_size": "15px",
          "font_weight": "500",
          "color": "#1F2937",
          "margin_bottom": "8px",
          "display": "block"
        },
        "input": {
          "type": "text",
          "placeholder": "Copy & paste code, e.g. BEEXX",
          "width": "100%",
          "height": "48px",
          "padding": "12px 16px",
          "border": "1px solid #D1D5DB",
          "border_radius": "8px",
          "font_family": "sans-serif, Inter",
          "font_size": "15px",
          "font_weight": "400",
          "color": "#1F2937",
          "placeholder_color": "#9CA3AF",
          "background_color": "#FFFFFF",
          "transition": "all 0.2s ease"
        },
        "focus_state": {
          "border_color": "#F59E0B",
          "box_shadow": "0 0 0 3px rgba(245, 158, 11, 0.1)"
        }
      }
    },
    "submit_button": {
      "position": "Below form fields",
      "margin_top": "48px",
      "container": {
        "display": "flex",
        "justify_content": "flex-end",
        "width": "100%",
        "max_width": "800px"
      },
      "button": {
        "text": "Continue",
        "display": "inline-flex",
        "align_items": "center",
        "justify_content": "center",
        "gap": "8px",
        "padding": "14px 32px",
        "height": "52px",
        "min_width": "160px",
        "background_color": "#F59E0B (amber/yellow)",
        "border": "none",
        "border_radius": "10px",
        "font_family": "sans-serif, Inter, -apple-system",
        "font_size": "16px",
        "font_weight": "600 (semi-bold)",
        "color": "#FFFFFF (white)",
        "cursor": "pointer",
        "transition": "all 0.2s ease",
        "box_shadow": "0 2px 8px rgba(245, 158, 11, 0.2)"
      },
      "arrow_icon": {
        "type": "Right arrow (→) or chevron right",
        "position": "After button text",
        "size": "18px",
        "color": "#FFFFFF",
        "margin_left": "4px"
      },
      "hover_state": {
        "background_color": "#D97706 (darker amber)",
        "transform": "translateY(-1px)",
        "box_shadow": "0 4px 12px rgba(245, 158, 11, 0.3)"
      },
      "active_state": {
        "transform": "translateY(0px)",
        "box_shadow": "0 1px 4px rgba(245, 158, 11, 0.4)"
      },
      "disabled_state": {
        "background_color": "#D1D5DB (gray-300)",
        "color": "#9CA3AF (gray-400)",
        "cursor": "not-allowed",
        "box_shadow": "none",
        "hover_effect": "none"
      }
    }
  },
  "right_section_preview_area": {
    "container": {
      "flex": "1 1 40%",
      "max_width": "40%",
      "background_color": "#FEF3C7 (very light amber/cream)",
      "padding": "40px 32px",
      "display": "flex",
      "flex_direction": "column",
      "gap": "24px",
      "overflow_y": "auto",
      "height": "100vh",
      "position": "sticky",
      "top": "0"
    },
    "preview_card_1_dashboard": {
      "position": "First preview card in scroll area",
      "container": {
        "width": "100%",
        "background_color": "#FFFFFF",
        "border": "1px solid #E5E7EB (gray-200)",
        "border_radius": "16px",
        "padding": "24px",
        "box_shadow": "0 4px 16px rgba(0, 0, 0, 0.06)",
        "margin_bottom": "24px",
        "transition": "all 0.3s ease"
      },
      "header": {
        "display": "flex",
        "align_items": "center",
        "gap": "12px",
        "margin_bottom": "20px",
        "icon_group": {
          "display": "flex",
          "gap": "8px",
          "flex_wrap": "wrap",
          "note": "Replace icons as needed - positioning and spacing defined, not specific icons"
        },
        "title": {
          "text": "Your path to interview success",
          "font_family": "sans-serif, Inter",
