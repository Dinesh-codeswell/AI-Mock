      "name_fields_grid": "Stack vertically (1 column)",
      "button_width": "100% (full width)",
      "floating_widgets": "Reduce size or reposition"
    }
  },
  "form_validation_logic": {
    "validation_trigger": "On blur and on submit",
    "required_fields": ["First Name", "Last Name", "Role"],
    "validation_rules": {
      "first_name": {
        "required": true,
        "min_length": 1,
        "error_message": "First name is required"
      },
      "last_name": {
        "required": true,
        "min_length": 1,
        "error_message": "Last name is required"
      },
      "role": {
        "required": true,
        "min_selections": 1,
        "max_selections": 3,
        "error_message": "Please select at least one role"
      },
      "promo_code": {
        "required": false,
        "format": "alphanumeric"
      }
    },
    "submit_validation": {
      "prevent_submit_if_invalid": true,
      "show_all_errors_on_submit": true,
      "focus_first_error": true
    }
  },
  "accessibility": {
    "semantic_html": "Use proper form elements with labels",
    "aria_labels": {
      "form": "aria-label='Personalization form'",
      "required_fields": "aria-required='true'",
      "error_messages": "aria-describedby for error message association"
    },
    "keyboard_navigation": {
      "tab_order": "Logical top-to-bottom flow",
      "focus_visible": "Clear focus indicators on all inputs",
      "enter_to_submit": "Submit form on Enter key in last field"
    },
    "screen_reader": {
      "error_announcements": "Use aria-live regions for validation errors",
      "progress_indicator": "Announce progress updates"
    },
    "color_contrast": "All text meets WCAG AA standards (4.5:1 minimum)"
  },
  "animation_and_transitions": {
    "page_load": "Fade in animation for form and preview cards",
    "input_focus": "Smooth border color and shadow transition (0.2s)",
    "button_hover": "Transform and shadow animation (0.2s)",
    "error_display": "Slide down animation for error messages",
    "progress_bar": "Width transition animation (0.3s ease)"
  },
  "color_system": {
    "primary_brand": "#F59E0B (amber/yellow)",
    "primary_dark": "#D97706 (darker amber)",
    "background_cream": "#FEF3C7 (light amber/cream)",
